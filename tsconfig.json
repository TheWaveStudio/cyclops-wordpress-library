{
  "compilerOptions": {
    "outDir": "./build/",
    "module": "ESNext",
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./blocks",
    "paths": {
      "@/types/*": [
        "./types/*"
      ],
      "@/components/*": [
        "./components/*"
      ],
      "@/fields/*": [
        "./components/fields/*"
      ]
    }
  },
  "include": [
    "blocks"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
