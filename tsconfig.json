{
  "compilerOptions": {
    "jsx": "react",
    "target": "es6",
    "lib": [
      "esnext",
      "dom"
    ],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "baseUrl": ".",
    "outDir": "./build/",
    "paths": {
      "@/types/*": [
        "./blocks/types/*"
      ],
      "@/components/*": [
        "./blocks/components/*"
      ],
      "@/fields/*": [
        "./blocks/components/fields/*"
      ]
    }
  },
  "include": [
    "."
  ],
  "exclude": [
    "node_modules"
  ]
}
